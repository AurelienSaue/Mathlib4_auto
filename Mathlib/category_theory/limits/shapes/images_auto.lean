/-- Data exhibiting that a morphism `f` has an image. -/
structure image_factorisation {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) where
  F : mono_factorisation f
  is_image : is_image F

protected instance inhabited_image_factorisation {C : Type u} [category C] {X : C} {Y : C}
    (f : X ‚ü∂ Y) [mono f] : Inhabited (image_factorisation f) :=
  { default := image_factorisation.mk (mono_factorisation.self f) (is_image.self f) }

/-- `has_image f` means that there exists an image factorisation of `f`. -/
class has_image {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) where
  mk' :: (exists_image : Nonempty (image_factorisation f))

theorem has_image.mk {C : Type u} [category C] {X : C} {Y : C} {f : X ‚ü∂ Y}
    (F : image_factorisation f) : has_image f :=
  has_image.mk' (Nonempty.intro F)

/-- The chosen factorisation of `f` through a monomorphism. -/
def image.mono_factorisation {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) [has_image f] :
    mono_factorisation f :=
  image_factorisation.F (Classical.choice has_image.exists_image)

/-- The witness of the universal property for the chosen factorisation of `f` through a monomorphism. -/
def image.is_image {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) [has_image f] :
    is_image (image.mono_factorisation f) :=
  image_factorisation.is_image (Classical.choice has_image.exists_image)

/-- The categorical image of a morphism. -/
/-- The inclusion of the image of a morphism into the target. -/
def image {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) [has_image f] : C :=
  mono_factorisation.I sorry

def image.Œπ {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) [has_image f] : image f ‚ü∂ Y :=
  mono_factorisation.m (image.mono_factorisation f)

@[simp] theorem image.as_Œπ {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) [has_image f] :
    mono_factorisation.m (image.mono_factorisation f) = image.Œπ f :=
  rfl

protected instance image.Œπ.category_theory.mono {C : Type u} [category C] {X : C} {Y : C}
    (f : X ‚ü∂ Y) [has_image f] : mono (image.Œπ f) :=
  mono_factorisation.m_mono (image.mono_factorisation f)

/-- The map from the source to the image of a morphism. -/
/-- Rewrite in terms of the `factor_thru_image` interface. -/
def factor_thru_image {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) [has_image f] :
    X ‚ü∂ image f :=
  mono_factorisation.e (image.mono_factorisation f)

@[simp] theorem as_factor_thru_image {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y)
    [has_image f] : mono_factorisation.e (image.mono_factorisation f) = factor_thru_image f :=
  rfl

@[simp] theorem image.fac_assoc {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) [has_image f]
    {X' : C} (f' : Y ‚ü∂ X') : factor_thru_image f ‚â´ image.Œπ f ‚â´ f' = f ‚â´ f' :=
  sorry

/-- Any other factorisation of the morphism `f` through a monomorphism receives a map from the image. -/
def image.lift {C : Type u} [category C] {X : C} {Y : C} {f : X ‚ü∂ Y} [has_image f]
    (F' : mono_factorisation f) : image f ‚ü∂ mono_factorisation.I F' :=
  is_image.lift (image.is_image f) F'

@[simp] theorem image.lift_fac {C : Type u} [category C] {X : C} {Y : C} {f : X ‚ü∂ Y} [has_image f]
    (F' : mono_factorisation f) : image.lift F' ‚â´ mono_factorisation.m F' = image.Œπ f :=
  is_image.lift_fac' (image.is_image f) F'

@[simp] theorem image.fac_lift {C : Type u} [category C] {X : C} {Y : C} {f : X ‚ü∂ Y} [has_image f]
    (F' : mono_factorisation f) : factor_thru_image f ‚â´ image.lift F' = mono_factorisation.e F' :=
  is_image.fac_lift (image.is_image f) F'

@[simp] theorem is_image.lift_Œπ_assoc {C : Type u} [category C] {X : C} {Y : C} {f : X ‚ü∂ Y}
    [has_image f] {F : mono_factorisation f} (hF : is_image F) {X' : C} (f' : Y ‚ü∂ X') :
    is_image.lift hF (image.mono_factorisation f) ‚â´ image.Œπ f ‚â´ f' = mono_factorisation.m F ‚â´ f' :=
  sorry

