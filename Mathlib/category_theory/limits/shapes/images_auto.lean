protected instance image_map.subsingleton {C : Type u} [category C] {f : arrow C} {g : arrow C}
    [has_image (comma.hom f)] [has_image (comma.hom g)] (sq : f ‚ü∂ g) :
    subsingleton (image_map sq) :=
  subsingleton.intro
    fun (a b : image_map sq) =>
      image_map.ext a b
        (iff.mp (cancel_mono (image.Œπ (comma.hom g)))
          (eq.mpr
            (id
              ((fun (a a_1 : image (comma.hom f) ‚ü∂ functor.obj ùü≠ (comma.right g)) (e_1 : a = a_1)
                  (·æ∞ ·æ∞_1 : image (comma.hom f) ‚ü∂ functor.obj ùü≠ (comma.right g)) (e_2 : ·æ∞ = ·æ∞_1) =>
                  congr (congr_arg Eq e_1) e_2)
                (image_map.map a ‚â´ image.Œπ (comma.hom g))
                (image.Œπ (comma.hom f) ‚â´ comma_morphism.right sq) (image_map.map_Œπ a)
                (image_map.map b ‚â´ image.Œπ (comma.hom g))
                (image.Œπ (comma.hom f) ‚â´ comma_morphism.right sq) (image_map.map_Œπ b)))
            (Eq.refl (image.Œπ (comma.hom f) ‚â´ comma_morphism.right sq))))

/-- The map on images induced by a commutative square. -/
def image.map {C : Type u} [category C] {f : arrow C} {g : arrow C} [has_image (comma.hom f)]
    [has_image (comma.hom g)] (sq : f ‚ü∂ g) [has_image_map sq] :
    image (comma.hom f) ‚ü∂ image (comma.hom g) :=
  image_map.map (has_image_map.image_map sq)

