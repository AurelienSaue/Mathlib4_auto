    [has_image (comma.hom g)] (sq : f ‚ü∂ g)
    where
  map : image (comma.hom f) ‚ü∂ image (comma.hom g)
  map_Œπ' :
    autoParam (map ‚â´ image.Œπ (comma.hom g) = image.Œπ (comma.hom f) ‚â´ comma_morphism.right sq)
      (Lean.Syntax.ident Lean.SourceInfo.none (String.toSubstring "Mathlib.obviously")
        (Lean.Name.mkStr (Lean.Name.mkStr Lean.Name.anonymous "Mathlib") "obviously") [])

