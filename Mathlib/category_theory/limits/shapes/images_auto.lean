    [has_image (comma.hom f)] [has_image (comma.hom g)] (sq : f ‚ü∂ g) [has_image_map sq]
    {h : arrow C} [has_image (comma.hom h)] (sq' : g ‚ü∂ h) [has_image_map sq']
    [has_image_map (sq ‚â´ sq')] : image.map (sq ‚â´ sq') = image.map sq ‚â´ image.map sq' :=
  sorry

