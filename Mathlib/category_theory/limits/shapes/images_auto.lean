    {F : mono_factorisation f} (c : is_image F) (F' : mono_factorisation f) {X' : C} (f' : Y ‚ü∂ X') :
    is_image.lift c F' ‚â´ mono_factorisation.m F' ‚â´ f' = mono_factorisation.m F ‚â´ f' :=
