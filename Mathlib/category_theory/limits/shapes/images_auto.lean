protected instance lift_mono {C : Type u} [category C] {X : C} {Y : C} {f : X ‚ü∂ Y} [has_image f]
    (F' : mono_factorisation f) : mono (image.lift F') :=
  mono_of_mono (image.lift F') (mono_factorisation.m F')

theorem has_image.uniq {C : Type u} [category C] {X : C} {Y : C} {f : X ‚ü∂ Y} [has_image f]
    (F' : mono_factorisation f) (l : image f ‚ü∂ mono_factorisation.I F')
    (w : l ‚â´ mono_factorisation.m F' = image.Œπ f) : l = image.lift F' :=
  sorry

/-- `has_images` represents a choice of image for every morphism -/
class has_images (C : Type u) [category C] where
  has_image : ‚àÄ {X Y : C} (f : X ‚ü∂ Y), has_image f

/-- The image of a monomorphism is isomorphic to the source. -/
def image_mono_iso_source {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) [has_image f]
    [mono f] : image f ‚âÖ X :=
  is_image.iso_ext (image.is_image f) (is_image.self f)

@[simp] theorem image_mono_iso_source_inv_Œπ {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y)
    [has_image f] [mono f] : iso.inv (image_mono_iso_source f) ‚â´ image.Œπ f = f :=
  sorry

@[simp] theorem image_mono_iso_source_hom_self_assoc {C : Type u} [category C] {X : C} {Y : C}
    (f : X ‚ü∂ Y) [has_image f] [mono f] {X' : C} (f' : Y ‚ü∂ X') :
    iso.hom (image_mono_iso_source f) ‚â´ f ‚â´ f' = image.Œπ f ‚â´ f' :=
  sorry

-- This is the proof that `factor_thru_image f` is an epimorphism

-- from https://en.wikipedia.org/wiki/Image_(category_theory), which is in turn taken from:

-- Mitchell, Barry (1965), Theory of categories, MR 0202787, p.12, Proposition 10.1

theorem image.ext {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) [has_image f] {W : C}
    {g : image f ‚ü∂ W} {h : image f ‚ü∂ W} [has_limit (parallel_pair g h)]
    (w : factor_thru_image f ‚â´ g = factor_thru_image f ‚â´ h) : g = h :=
  sorry

protected instance factor_thru_image.category_theory.epi {C : Type u} [category C] {X : C} {Y : C}
    (f : X ‚ü∂ Y) [has_image f] [‚àÄ {Z : C} (g h : image f ‚ü∂ Z), has_limit (parallel_pair g h)] :
    epi (factor_thru_image f) :=
  epi.mk
    fun (Z : C) (g h : image f ‚ü∂ Z) (w : factor_thru_image f ‚â´ g = factor_thru_image f ‚â´ h) =>
      image.ext f w

theorem epi_image_of_epi {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) [has_image f]
    [E : epi f] : epi (image.Œπ f) :=
  epi_of_epi (factor_thru_image f) (image.Œπ f)

theorem epi_of_epi_image {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) [has_image f]
    [epi (image.Œπ f)] [epi (factor_thru_image f)] : epi f :=
  eq.mpr (id (Eq._oldrec (Eq.refl (epi f)) (Eq.symm (image.fac f))))
    (epi_comp (factor_thru_image f) (image.Œπ f))

/--
An equation between morphisms gives a comparison map between the images
(which momentarily we prove is an iso).
-/
def image.eq_to_hom {C : Type u} [category C] {X : C} {Y : C} {f : X ‚ü∂ Y} {f' : X ‚ü∂ Y} [has_image f]
    [has_image f'] (h : f = f') : image f ‚ü∂ image f' :=
  image.lift (mono_factorisation.mk (image f') (image.Œπ f') (factor_thru_image f'))

protected instance image.eq_to_hom.category_theory.is_iso {C : Type u} [category C] {X : C} {Y : C}
    {f : X ‚ü∂ Y} {f' : X ‚ü∂ Y} [has_image f] [has_image f'] (h : f = f') :
    is_iso (image.eq_to_hom h) :=
  is_iso.mk (image.eq_to_hom sorry)

/-- An equation between morphisms gives an isomorphism between the images. -/
def image.eq_to_iso {C : Type u} [category C] {X : C} {Y : C} {f : X ‚ü∂ Y} {f' : X ‚ü∂ Y} [has_image f]
    [has_image f'] (h : f = f') : image f ‚âÖ image f' :=
  as_iso (image.eq_to_hom h)

/--
As long as the category has equalizers,
the image inclusion maps commute with `image.eq_to_iso`.
-/
theorem image.eq_fac {C : Type u} [category C] {X : C} {Y : C} {f : X ‚ü∂ Y} {f' : X ‚ü∂ Y}
    [has_image f] [has_image f'] [has_equalizers C] (h : f = f') :
    image.Œπ f = iso.hom (image.eq_to_iso h) ‚â´ image.Œπ f' :=
  sorry

/-- The comparison map `image (f ‚â´ g) ‚ü∂ image g`. -/
def image.pre_comp {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) {Z : C} (g : Y ‚ü∂ Z)
    [has_image g] [has_image (f ‚â´ g)] : image (f ‚â´ g) ‚ü∂ image g :=
  image.lift (mono_factorisation.mk (image g) (image.Œπ g) (f ‚â´ factor_thru_image g))

@[simp] theorem image.factor_thru_image_pre_comp {C : Type u} [category C] {X : C} {Y : C}
    (f : X ‚ü∂ Y) {Z : C} (g : Y ‚ü∂ Z) [has_image g] [has_image (f ‚â´ g)] :
    factor_thru_image (f ‚â´ g) ‚â´ image.pre_comp f g = f ‚â´ factor_thru_image g :=
  sorry

/--
The two step comparison map
  `image (f ‚â´ (g ‚â´ h)) ‚ü∂ image (g ‚â´ h) ‚ü∂ image h`
agrees with the one step comparison map
  `image (f ‚â´ (g ‚â´ h)) ‚âÖ image ((f ‚â´ g) ‚â´ h) ‚ü∂ image h`.
 -/
theorem image.pre_comp_comp {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) {Z : C}
    (g : Y ‚ü∂ Z) {W : C} (h : Z ‚ü∂ W) [has_image (g ‚â´ h)] [has_image (f ‚â´ g ‚â´ h)] [has_image h]
    [has_image ((f ‚â´ g) ‚â´ h)] :
    image.pre_comp f (g ‚â´ h) ‚â´ image.pre_comp g h =
        image.eq_to_hom (Eq.symm (category.assoc f g h)) ‚â´ image.pre_comp (f ‚â´ g) h :=
  sorry

/--
`image.pre_comp f g` is an isomorphism when `f` is an isomorphism
(we need `C` to have equalizers to prove this).
-/
protected instance image.is_iso_precomp_iso {C : Type u} [category C] {X : C} {Y : C} {Z : C}
    (g : Y ‚ü∂ Z) [has_equalizers C] (f : X ‚âÖ Y) [has_image g] [has_image (iso.hom f ‚â´ g)] :
    is_iso (image.pre_comp (iso.hom f) g) :=
  is_iso.mk
    (image.lift
      (mono_factorisation.mk (image (iso.hom f ‚â´ g)) (image.Œπ (iso.hom f ‚â´ g))
        (iso.inv f ‚â´ factor_thru_image (iso.hom f ‚â´ g))))

-- Note that in general we don't have the other comparison map you might expect

-- `image f ‚ü∂ image (f ‚â´ g)`.

/-- Postcomposing by an isomorphism induces an isomorphism on the image. -/
def image.post_comp_is_iso {C : Type u} [category C] {X : C} {Y : C} (f : X ‚ü∂ Y) {Z : C} (g : Y ‚ü∂ Z)
    [has_equalizers C] [is_iso g] [has_image f] [has_image (f ‚â´ g)] : image f ‚âÖ image (f ‚â´ g) :=
  iso.mk
    (image.lift
      (mono_factorisation.mk (image (f ‚â´ g)) (image.Œπ (f ‚â´ g) ‚â´ inv g) (factor_thru_image (f ‚â´ g))))
    (image.lift (mono_factorisation.mk (image f) (image.Œπ f ‚â´ g) (factor_thru_image f)))

@[simp] theorem image.post_comp_is_iso_hom_comp_image_Œπ_assoc {C : Type u} [category C] {X : C}
    {Y : C} (f : X ‚ü∂ Y) {Z : C} (g : Y ‚ü∂ Z) [has_equalizers C] [is_iso g] [has_image f]
    [has_image (f ‚â´ g)] {X' : C} (f' : Z ‚ü∂ X') :
    iso.hom (image.post_comp_is_iso f g) ‚â´ image.Œπ (f ‚â´ g) ‚â´ f' = image.Œπ f ‚â´ g ‚â´ f' :=
  sorry

@[simp] theorem image.post_comp_is_iso_inv_comp_image_Œπ_assoc {C : Type u} [category C] {X : C}
    {Y : C} (f : X ‚ü∂ Y) {Z : C} (g : Y ‚ü∂ Z) [has_equalizers C] [is_iso g] [has_image f]
    [has_image (f ‚â´ g)] {X' : C} (f' : Y ‚ü∂ X') :
    iso.inv (image.post_comp_is_iso f g) ‚â´ image.Œπ f ‚â´ f' = image.Œπ (f ‚â´ g) ‚â´ inv g ‚â´ f' :=
  sorry

